<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow
    http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
    start-state="home">
    
    <view-state id="home" view="home.xhtml">
        <on-entry>
            <evaluate expression="mainController.newFragmentListBean(flowRequestContext)" result="viewScope.fragmentListBean"/>
            <evaluate expression="mainController.newTagListBean()" result="viewScope.tagListBean"/>
            <evaluate expression="mainController.newFragmentBean()" result="viewScope.userEditedFragmentBean"/>
        </on-entry>
        
        <transition on="inspect-fragment" to="inspect-fragment">
            <set name="requestScope.fragmentLoopIndex" value="requestParameters.fragmentLoopIndex" type="integer" />
            <set name="flowScope.fragmentListBean" value="viewScope.fragmentListBean" />
        </transition>
        
        <transition on="filter-by-tag" to="home">
            <set name="flowScope.tagId" value="requestParameters.tagId" type="long" />
        </transition>
        
        <transition on="trash-fragment" to="exit">
            <set name="flowScope.fragmentId" value="requestParameters.fragmentId" type="long" />
            <evaluate expression="mainController.trashFragment(flowRequestContext)" />
        </transition>

        <transition on="delete-fragment" to="exit">
            <set name="flowScope.fragmentId" value="requestParameters.fragmentId" type="long" />
            <evaluate expression="mainController.deleteFragment(flowRequestContext)" />
        </transition>

        <transition on="save-fragment" to="exit">
            <evaluate expression="mainController.saveFragment(flowRequestContext)" />
            <evaluate expression="userEditedFragmentBean.clear()" />
        </transition>

        <transition on="preview-fragment" >
            <evaluate expression="mainController.test(flowRequestContext, fragmentListBean, tagListBean, userEditedFragmentBean)" />
            <evaluate expression="userEditedFragmentBean.clear()" />
        </transition>
    </view-state>
    
    <view-state id="inspect-fragment" view="inspect-fragment.xhtml">
        <on-entry>
            <evaluate expression="mainController.inspectFragment(flowRequestContext)"
                result="viewScope.fragmentBean"/>
        </on-entry>
        <transition on ="back" to="home"/>
    </view-state>

    <view-state id="test" view="test.xhtml">
        <on-entry>
            <evaluate expression="mainController.test(flowRequestContext, null, null, null)" />
        </on-entry>
        <transition on ="back" to="home"/>
    </view-state>

    <end-state id="exit" />
             
    <global-transitions>
        <transition on="exit" to="home"/>
    </global-transitions>

</flow>
