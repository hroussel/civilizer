<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow
    http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
    start-state="home">
    
    <on-start>
        <evaluate expression="mainController.newFragmentBean()" result="flowScope.userEditedFragmentBean"/>
        <evaluate expression="mainController.newFragmentListBean(null)" result="flowScope.fragmentListBean"/>
        <evaluate expression="mainController.newTagListBean()" result="flowScope.tagListBean"/>
    </on-start>
    
    <view-state id="home" view="home.xhtml">
        <transition on="inspect-fragment" to="inspect-fragment">
            <set name="requestScope.fragmentLoopIndex" value="requestParameters.fragmentLoopIndex" type="integer" />
        </transition>
        
        <transition on="filter-by-tag" to="home">
            <set name="requestScope.tagId" value="requestParameters.tagId" type="long" />
            <evaluate expression="mainController.newFragmentListBean(requestScope.tagId)" result="flowScope.fragmentListBean"/>
        </transition>
        
        <transition on="trash-fragment" to="exit">
            <set name="requestScope.fragmentId" value="requestParameters.fragmentId" type="long" />
            <evaluate expression="mainController.trashFragment(requestScope.fragmentId)" />
        </transition>

        <transition on="delete-fragment" to="exit">
            <set name="requestScope.fragmentId" value="requestParameters.fragmentId" type="long" />
            <evaluate expression="mainController.deleteFragment(requestScope.fragmentId)" />
        </transition>

        <transition on="save-fragment" to="exit">
            <evaluate expression="mainController.saveFragment(userEditedFragmentBean, tagListBean)" />
            <evaluate expression="userEditedFragmentBean.clear()" />
        </transition>

        <transition on="preview-fragment" >
            <evaluate expression="mainController.test(fragmentListBean, tagListBean, userEditedFragmentBean)" />
            <evaluate expression="userEditedFragmentBean.clear()" />
        </transition>
    </view-state>
    
    <view-state id="inspect-fragment" view="inspect-fragment.xhtml">
        <on-entry>
            <evaluate expression="mainController.inspectFragment(requestScope.fragmentLoopIndex, fragmentListBean)"
                result="viewScope.fragmentBean"/>
        </on-entry>
        <transition on ="back" to="home"/>
    </view-state>

    <view-state id="test" view="test.xhtml">
        <on-entry>
            <evaluate expression="mainController.test(null, null, null)" />
        </on-entry>
        <transition on ="back" to="home"/>
    </view-state>

    <end-state id="exit" />
             
    <global-transitions>
        <transition on="exit" to="home"/>
    </global-transitions>

</flow>
