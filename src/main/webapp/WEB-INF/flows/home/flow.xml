<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow
    http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
    start-state="home">
    
    <var name="customParams" class="com.knowledgex.web.view.ParameterBean"/>
    
    <on-start>
        <evaluate expression="mainController.newFragmentListBeans()" result="flowScope.fragmentListBeans"/>
        <evaluate expression="mainController.newFragmentBean()" result="flowScope.paramFragmentBean"/>
        <evaluate expression="mainController.newTagListBean()" result="flowScope.tagListBean"/>
        <evaluate expression="mainController.newTagBean()" result="flowScope.paramTagBean"/>
        <evaluate expression="mainController.newBookmarkTagBean()" result="flowScope.bookmarkTagBean"/>
        <evaluate expression="mainController.newSearchContextBeans()" result="flowScope.searchContextBeans"/>
    </on-start>
    
    <view-state id="home" view="home.xhtml">
        <on-entry>
            <evaluate
                expression="mainController.populateFragmentListBeans(fragmentListBeans, requestScope.panelContextBean, requestScope.searchContextBean, flowRequestContext)"
                />
        </on-entry>
        
        <transition on="filter-by-tag" to="home">
            <evaluate
                expression="mainController.newPanelContextBean(customParams.panelIdForTagPalette, requestParameters.tagId, 0)"
                result="requestScope.panelContextBean"/>
        </transition>
        
        <transition on="bookmark-fragment" to="home">
            <evaluate expression="mainController.bookmarkFragment(requestParameters.fragmentId)" />
            <evaluate expression="mainController.newBookmarkTagBean()" result="flowScope.bookmarkTagBean"/>
        </transition>

        <transition on="unbookmark-fragment" to="home">
            <evaluate expression="mainController.unbookmarkFragment(requestParameters.fragmentId)" />
            <evaluate expression="mainController.newBookmarkTagBean()" result="flowScope.bookmarkTagBean"/>
        </transition>
        
        <transition on="trash-fragment" to="home">
            <evaluate expression="mainController.trashFragment(paramFragmentBean)" />
            <evaluate expression="mainController.newTagListBean()" result="flowScope.tagListBean"/>
            <evaluate expression="mainController.newBookmarkTagBean()" result="flowScope.bookmarkTagBean"/>
        </transition>

        <transition on="delete-fragment" to="home">
            <evaluate expression="mainController.deleteFragment(paramFragmentBean)" />
            <evaluate expression="mainController.newTagListBean()" result="flowScope.tagListBean"/>
        </transition>

        <transition on="trash-fragments" to="home">
            <evaluate expression="mainController.trashFragments(fragmentListBeans[customParams.panelId])" />
            <evaluate expression="mainController.newTagListBean()" result="flowScope.tagListBean"/>
            <evaluate expression="mainController.newBookmarkTagBean()" result="flowScope.bookmarkTagBean"/>
        </transition>

        <transition on="delete-fragments" to="home">
            <evaluate expression="mainController.deleteFragments(fragmentListBeans[customParams.panelId])" />
            <evaluate expression="mainController.newTagListBean()" result="flowScope.tagListBean"/>
        </transition>

        <transition on="save-fragment" to="home">
            <evaluate expression="mainController.saveFragment(paramFragmentBean, tagListBean)" />
            <evaluate expression="paramFragmentBean.clear()" />
            <evaluate expression="mainController.newTagListBean()" result="flowScope.tagListBean"/>
            <evaluate expression="mainController.newBookmarkTagBean()" result="flowScope.bookmarkTagBean"/>
        </transition>

        <transition on="save-tag" to="home">
            <evaluate expression="mainController.saveTag(paramTagBean, tagListBean)" />
            <evaluate expression="paramTagBean.clear()" />
            <evaluate expression="mainController.newTagListBean()" result="flowScope.tagListBean"/>
            <evaluate expression="mainController.newBookmarkTagBean()" result="flowScope.bookmarkTagBean"/>
        </transition>

        <transition on="trash-tag" to="home">
            <evaluate expression="mainController.trashTag(paramTagBean)" />
            <evaluate expression="paramTagBean.clear()" />
            <evaluate expression="mainController.newTagListBean()" result="flowScope.tagListBean"/>
            <evaluate expression="mainController.newBookmarkTagBean()" result="flowScope.bookmarkTagBean"/>
        </transition>
        
        <transition on="delete-tag" to="home">
            <evaluate expression="mainController.deleteTag(paramTagBean)" />
            <evaluate expression="paramTagBean.clear()" />
            <evaluate expression="mainController.newTagListBean()" result="flowScope.tagListBean"/>
        </transition>

        <transition on="relate-fragments" to="home">
            <evaluate expression="mainController.yetToBeDeveloped(requestParameters.from, requestParameters.to)" />
        </transition>
        
        <transition on="search-fragments" to="home">
            <evaluate expression="mainController.yetToBeDeveloped()" />
        </transition>

        <transition on="quick-search-fragments" to="home">
            <set name="requestScope.searchContextBean" value="searchContextBeans[requestParameters.panelId]" />
            <evaluate expression="customParams.setPanelIdForSearch(requestParameters.panelId)" />
        </transition>

        <transition on="prev-fragment-page" to="home">
            <evaluate
                expression="mainController.newPanelContextBean(requestParameters.panelId, requestParameters.curTagId, requestParameters.curPage-1)"
                result="requestScope.panelContextBean"/>
        </transition>

        <transition on="next-fragment-page" to="home">
            <evaluate
                expression="mainController.newPanelContextBean(requestParameters.panelId, requestParameters.curTagId, requestParameters.curPage+1)"
                result="requestScope.panelContextBean"/>
        </transition>

        <transition on="sort-fragments" to="home">
            <evaluate
                expression="mainController.newPanelContextBean(requestParameters.panelId, requestParameters.curTagId, requestParameters.curPage)"
                result="requestScope.panelContextBean"/>
        </transition>

        <transition on="go-home" to="home">
            <evaluate
                expression="mainController.newPanelContextBean(requestParameters.panelId, -1000, 0)"
                result="requestScope.panelContextBean"/>
        </transition>
    </view-state>
    
    <end-state id="exit" />
             
    <global-transitions>
        <transition on="exit" to="home"/>
    </global-transitions>

</flow>
