<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow
    http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
    start-state="home">
    
    <on-start>
        <evaluate expression="mainController.newFragmentListBeans()" result="flowScope.fragmentListBeans"/>
        <evaluate expression="mainController.newFragmentBean()" result="flowScope.userEditedFragmentBean"/>
        <evaluate expression="mainController.newTagListBean()" result="flowScope.tagListBean"/>
        <evaluate expression="mainController.newTagBean()" result="flowScope.userEditedTagBean"/>
    </on-start>
    
    <view-state id="home" view="home.xhtml">
        <on-entry>
            <evaluate
                expression="mainController.newFragmentListBean(fragmentListBeans[0], requestScope.panelContextBean)"
                result="flowScope.fragmentListBeans[0]"/>
        </on-entry>
        
        <transition on="inspect-fragment" to="inspect-fragment">
            <set name="requestScope.fragmentLoopIndex" value="requestParameters.fragmentLoopIndex" type="integer" />
        </transition>
        
        <transition on="filter-by-tag" to="home">
            <evaluate
                expression="mainController.newPanelContextBean(requestParameters.tagId, 0)"
                result="requestScope.panelContextBean"/>
        </transition>
        
        <transition on="trash-fragment" to="home">
<!--             <evaluate expression="mainController.trashFragment(requestParameters.fragmentId)" /> -->
            <evaluate expression="mainController.trashFragment(userEditedFragmentBean)" />
            <evaluate expression="mainController.newTagListBean()" result="flowScope.tagListBean"/>
        </transition>

        <transition on="trash-fragments" to="home">
            <evaluate expression="mainController.trashFragments(fragmentListBeans[0])" />
            <evaluate expression="mainController.newTagListBean()" result="flowScope.tagListBean"/>
        </transition>

        <transition on="delete-fragment" to="home">
            <evaluate expression="mainController.deleteFragment(requestParameters.fragmentId)" />
            <evaluate expression="mainController.newTagListBean()" result="flowScope.tagListBean"/>
        </transition>

        <transition on="save-fragment" to="home">
            <evaluate expression="mainController.saveFragment(userEditedFragmentBean, tagListBean)" />
            <evaluate expression="userEditedFragmentBean.clear()" />
            <evaluate expression="mainController.newTagListBean()" result="flowScope.tagListBean"/>
        </transition>

        <transition on="save-tag" to="home">
            <evaluate expression="mainController.saveTag(userEditedTagBean, tagListBean)" />
            <evaluate expression="userEditedTagBean.clear()" />
            <evaluate expression="mainController.newTagListBean()" result="flowScope.tagListBean"/>
        </transition>

        <transition on="prev-fragment-page" to="home">
            <evaluate
                expression="mainController.newPanelContextBean(requestParameters.curTagId, requestParameters.curPage-1)"
                result="requestScope.panelContextBean"/>
        </transition>

        <transition on="next-fragment-page" to="home">
            <evaluate
                expression="mainController.newPanelContextBean(requestParameters.curTagId, requestParameters.curPage+1)"
                result="requestScope.panelContextBean"/>
        </transition>

        <transition on="sort-fragments" to="home">
            <evaluate
                expression="mainController.newPanelContextBean(requestParameters.curTagId, requestParameters.curPage)"
                result="requestScope.panelContextBean"/>
        </transition>

        <transition on="go-home" to="home">
        </transition>
    </view-state>
    
    <view-state id="inspect-fragment" view="inspect-fragment.xhtml">
        <on-entry>
            <evaluate expression="mainController.inspectFragment(fragmentLoopIndex, fragmentListBeans[0])"
            result="viewScope.fragmentBean"/>
        </on-entry>
        <transition on ="back" to="home"/>
    </view-state>

    <end-state id="exit" />
             
    <global-transitions>
        <transition on="exit" to="home"/>
    </global-transitions>

</flow>
