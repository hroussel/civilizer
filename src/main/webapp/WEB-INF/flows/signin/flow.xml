<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow
    http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
    start-state="signin">
    
    <on-start>
        <evaluate expression="signinController.newAuthenticationBean()" result="flowScope.authenticationBean"/>
    </on-start>

    <view-state id="signin" view="signin.xhtml">
        <on-entry>
            <evaluate expression="signinController.onEntry(flowRequestContext)" />
        </on-entry>
        
        <transition on="sign-in" to="exit">
            <evaluate expression="signinController.handleSignin()" />
        </transition>
    </view-state>
    
    <end-state id="exit" />
    
</flow>
